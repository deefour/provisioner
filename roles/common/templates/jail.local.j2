[DEFAULT]
ignoreip = {{ ip_whitelist|join(' ') }}
bantime  = 3600
findtime = 600
maxretry = 3

[sshd]
port    = ssh-{{ ssh_port }}
logpath = %(sshd_log)s

[sshd-ddos]
port    = ssh-{{ ssh_port }}
logpath = %(sshd_log)s

[dropbear]
port    = ssh-{{ ssh_port }}
logpath = %(dropbear_log)s

[selinux-ssh]
port     = ssh-{{ ssh_port }}
logpath  = %(auditd_log)s
maxretry = 5
